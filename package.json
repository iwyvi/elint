{
  "version": "2.0.1",
  "private": true,
  "scripts": {
    "clean": "pnpm -r run clean",
    "build": "pnpm -r --filter elint run build && pnpm -r --filter !elint run build",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint packages --fix",
    "lint:elint": "pnpm --filter ./packages/elint run build && node ./packages/elint/dist/cli lint \"packages/**/src/**/*.+(ts|tsx)\""
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "elint": "workspace:*",
    "eslint": "^8.11.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2"
  }
}
