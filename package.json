{
  "version": "2.0.1",
  "private": true,
  "scripts": {
    "clean": "pnpm -r run clean",
    "build": "pnpm -r --filter elint run build && pnpm -r --filter !elint run build",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "lint": "elint lint packages/**/src -s",
    "lint:elint": "pnpm --filter ./packages/elint run build && node ./packages/elint/dist/cli lint \"packages/**/src/**/*.+(ts|tsx)\""
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@types/node": "^17.0.23",
    "elint": "workspace:*",
    "elint-preset-self": "workspace:*",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2"
  }
}
