{
  "version": "2.0.1",
  "private": true,
  "scripts": {
    "clean": "pnpm -r run clean",
    "build": "pnpm -r --filter elint run build && pnpm -r --filter !elint run build",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "elint-helpers install --preset ./packages/elint-preset-self --project .",
    "lint": "elint lint packages/**/src -s",
    "start": "ts-node packages/elint/src/cli/index.ts lint packages/**/src -s"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.2.3",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.23",
    "elint": "workspace:*",
    "elint-helpers": "workspace:*",
    "elint-preset-self": "workspace:*",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
