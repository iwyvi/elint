{
  "name": "elint",
  "version": "2.0.1",
  "description": "A easy way to lint your code.",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "elint": "./bin/cli.js"
  },
  "scripts": {
    "build": "rimraf dist && tsup src/index.ts src/cli/index.ts --dts --format esm",
    "test": "npm run test:unit && npm run test:system",
    "test:unit": "jest --config test/unit/jest.config.js",
    "test:system": "jest --config test/system/jest.config.js --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x-orpheus/elint.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslintconfig",
    "stylelint",
    "commitlint",
    "standard",
    "jshint",
    "lint",
    "linter",
    "husky",
    "hooks",
    "git hooks"
  ],
  "author": {
    "name": "keenwon",
    "email": "semanwmj@gmail.com",
    "url": "http://keenwon.com"
  },
  "license": "MIT",
  "files": [
    "bin",
    "scripts",
    "src"
  ],
  "bugs": {
    "url": "https://github.com/x-orpheus/elint/issues"
  },
  "homepage": "https://github.com/x-orpheus/elint#readme",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "type": "module",
  "dependencies": {
    "@commitlint/core": "^16.2.3",
    "boxen": "^6.2.1",
    "chalk": "^5.0.1",
    "commander": "^9.0.0",
    "configstore": "^6.0.0",
    "debug": "^4.3.3",
    "eslint": "^8.11.0",
    "execa": "^6.1.0",
    "figures": "^4.0.0",
    "find-process": "^1.4.7",
    "fs-extra": "^10.0.1",
    "globby": "^13.1.1",
    "husky": "^7.0.4",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.4",
    "ms": "^2.1.3",
    "node-fetch": "^3.2.3",
    "prettier": "^2.6.0",
    "semver": "^7.3.5",
    "staged-git-files": "^1.3.0",
    "stylelint": "^14.6.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.180",
    "@types/micromatch": "^4.0.2",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0"
  },
  "ava": {
    "files": [
      "test/system/**/*.spec.js"
    ],
    "timeout": "600s",
    "failFast": true,
    "verbose": true
  }
}
