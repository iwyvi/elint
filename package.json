{
  "name": "elint",
  "version": "2.0.0-alpha.3",
  "description": "A easy way to lint your code.",
  "main": "src/index.js",
  "bin": {
    "elint": "./bin/cli.js"
  },
  "scripts": {
    "test": "npm run test:lint && npm run test:unit && npm run test:system",
    "test:lint": "eslint --format codeframe \"+(bin|src|test)/**/*.js\" --fix",
    "test:unit": "nyc --reporter=html --reporter=text mocha \"test/unit/**/*.spec.js\" --timeout 15000",
    "test:unit:coverage": "nyc report --reporter=lcovonly",
    "test:system": "node test/system/utils/init.js && ava && node test/system/utils/clean.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x-orpheus/elint.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslintconfig",
    "stylelint",
    "commitlint",
    "standard",
    "jshint",
    "lint",
    "linter",
    "husky",
    "hooks",
    "git hooks"
  ],
  "author": {
    "name": "keenwon",
    "email": "semanwmj@gmail.com",
    "url": "http://keenwon.com"
  },
  "license": "MIT",
  "files": [
    "bin",
    "scripts",
    "src"
  ],
  "bugs": {
    "url": "https://github.com/x-orpheus/elint/issues"
  },
  "homepage": "https://github.com/x-orpheus/elint#readme",
  "engines": {
    "node": ">=10.12.0"
  },
  "dependencies": {
    "@commitlint/core": "^11.0.0",
    "boxen": "^4.2.0",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "configstore": "^5.0.1",
    "debug": "^4.2.0",
    "eslint": "^7.9.0",
    "execa": "^4.0.3",
    "figures": "^3.2.0",
    "find-process": "^1.4.3",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "husky": "^2.7.0",
    "lodash": "^4.17.20",
    "micromatch": "^4.0.2",
    "ms": "^2.1.2",
    "node-fetch": "^2.6.1",
    "prettier": "^2.1.2",
    "semver": "^7.3.2",
    "staged-git-files": "^1.2.0",
    "stylelint": "~13.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "ava": "^3.12.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "deep-equal-in-any-order": "^1.0.28",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "sinon": "^9.0.3"
  },
  "ava": {
    "files": [
      "test/system/lint-files.spec.js"
    ],
    "timeout": "600s",
    "failFast": true,
    "verbose": true
  }
}
