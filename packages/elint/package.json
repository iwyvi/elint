{
  "name": "elint",
  "version": "3.0.0",
  "description": "A easy way to lint your code.",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "elint": "./dist/cli/index.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig-build.json",
    "test": "npm run test:unit && npm run test:system",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config test/unit/jest.config.js",
    "test:system": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config test/system/jest.config.js --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x-orpheus/elint.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslintconfig",
    "stylelint",
    "commitlint",
    "standard",
    "jshint",
    "lint",
    "linter",
    "husky",
    "hooks",
    "git hooks"
  ],
  "author": {
    "name": "keenwon",
    "email": "semanwmj@gmail.com",
    "url": "http://keenwon.com"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/x-orpheus/elint/issues"
  },
  "homepage": "https://github.com/x-orpheus/elint#readme",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "type": "module",
  "dependencies": {
    "@types/file-entry-cache": "^5.0.2",
    "boxen": "^6.2.1",
    "chalk": "^5.0.1",
    "commander": "^9.1.0",
    "configstore": "^6.0.0",
    "debug": "^4.3.4",
    "execa": "^6.1.0",
    "figures": "^4.0.0",
    "file-entry-cache": "^6.0.1",
    "find-process": "^1.4.7",
    "find-up": "^6.3.0",
    "fs-extra": "^10.0.1",
    "globby": "^13.1.1",
    "husky": "^7.0.4",
    "lodash-es": "^4.17.21",
    "micromatch": "^4.0.4",
    "semver": "^7.3.5",
    "staged-git-files": "^1.3.0"
  },
  "devDependencies": {
    "@types/configstore": "^5.0.1",
    "@types/micromatch": "^4.0.2",
    "verdaccio": "^5.8.0"
  },
  "ava": {
    "files": [
      "test/system/**/*.spec.js"
    ],
    "timeout": "600s",
    "failFast": true,
    "verbose": true
  }
}
