{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  },
  "include": ["./packages/**/*.ts"],
  "exclude": ["**/dist/**", "node_modules"]
}
